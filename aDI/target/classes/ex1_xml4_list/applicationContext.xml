<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="bean" class="ex1_xml4_list.ListBean">
		<property name="intList">		 <!-- property:set 함수 호출과 같음 -->
			<list>
				<value>22</value>
				<value>33</value>
				<value>44</value>
			</list>
		</property>

		<property name="memberList">
			<list>
				<ref bean="m1" />
				<ref bean="m2" />
				<bean class="ex1_xml4_list.MemberBean">
					<!-- 생성자(constructor-arg)*setter로 값 지정 -->
					<constructor-arg value="탄수괴물"></constructor-arg>
					<constructor-arg value="27" type="int" />
					<constructor-arg>
						<value>잠에 먹히다</value>
					</constructor-arg>
				</bean>
			</list>
		</property>
	</bean>

	<!-- 생성자로 값 지정 -->
	<bean id="m1" class="ex1_xml4_list.MemberBean">
		<constructor-arg value="장아영"></constructor-arg>
		<constructor-arg value="27" type="int" />
		<constructor-arg>
			<value>배불러</value>
		</constructor-arg>
	</bean>

	<!-- setter 이용 값 지정 -->
	<bean id="m2" class="ex1_xml4_list.MemberBean">
		<property name="name" value="홍길순"></property>
		<property name="age">
			<value>20</value>
		</property>
		<property name="message" value="태리로제 가보자고" />

	</bean>

</beans>
   